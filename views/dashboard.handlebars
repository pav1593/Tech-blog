<div class='row justify-content-center mt-5'>
  <h2>Welcome, {{username}}!</h2>
</div>

<div class='container d-flex flex-column mt-3'>

    {{#if posts.length}}
    <div id="recipe-list" class='d-flex align-items-center justify-content-center flex-column'>
      <h3>Current Recipes:</h3>
      <div>{{#each posts as |post|}}
          <div class='mb-2'>
            <div class='col-md-8'>
              <h4><a href='/recipes/{{post.id}}'>{{post.title}}</a></h4>
            <div class='m-2'>
              <button
                id='edit-link'
                class='btn btn-link m-2'
                data-id='{{post.id}}'
              >Edit</button>
              <button
                id='del-link'
                class='btn btn-link m-2'
                data-id='{{post.id}}'
              >Delete</button>
          </div>
        {{/each}}
        </div>

    </div>
  {{/if}}

  <div class='d-flex flex-column align-items-center'>
    <h3>Create a New Post:</h3>

    <form
      class='form new-project-form mt-3'
      action='/api/recipes/'
      method='POST'
      enctype='multipart/form-data'
      style='width:80%;max-width:600px;'
    >
      <div class='form-group'>
        <label for='title'>Title:</label>
        <input
          class='form-input form-control form-control'
          type='text'
          id='recipe-name'
          name='name'
        />
      </div>
      <div class='form-group'>
        <label for='content'>Content:</label>
        <textarea
          class='form-input form-control'
          id='recipe-desc'
          name='description'
        ></textarea>
      </div>
      <div class='form-group'>
        <button
          type='submit'
          class='btn btn-success d-block mt-5 mx-auto'
        >Create</button>
      </div>
    </form>

  </div>


</div>

<script src='./js/profile.js'></script>