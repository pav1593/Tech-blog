<!-- Loop over each object in the projects array -->

<div class='container p-3 mb-3'>
  <!-- card replace with handlebar -->
  {{#each posts as |post|}}
    <div class='card mb-3'>
    <div class="card-header bg-light"><a href="api/posts/{{post.id}}">{{post.title}}</a></div>
      <div class="card-body">
        <p class="card-text">{{post.content}}</p>
      </div>
      <div class="card-footer bg-light text-right"><small class="text-muted"> by {{post.user.username}} posted on {{format_date post.date_created}}</small></div>

    </div>
  {{/each}}
</div>